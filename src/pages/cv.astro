];

const skillLevelMap = {
  Frontend: {
    color: "var(--rosewater)",
    skillMap: {
      Vue: 4,
      Astro: 4,
      CSS: 4,
      Typescript: 4,
      "Three.js": 4,
      GraphQL: 3,
      gRPC: 3,
    },
  },
  Backend: {
    color: "var(--green)",
    skillMap: {
      C: 2,
      "C++": 2,
      Python: 3,
      Java: 2,
    },
  },
  Generell: {
    color: "var(--lavender)",
    skillMap: {
      Git: 4,
      Linux: 4,
      Leadership: 3,
      Hiring: 4,
      "Feature Specification": 4,
    },
