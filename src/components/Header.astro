---
import ThemeSelection from "./ThemeSelection/ThemeSelection.astro";
import { Icon } from 'astro-icon/components';
---
<div>
    <nav>
        <a href="/">
            <Icon name="kevin_single_logo_large"/>
        </a>
        <ul>
            <li><a href="/blog">blog</a></li>
        </ul>
    </nav>
    <ThemeSelection />
</div>


<style>
    div {
        display: flex;
        gap: var(--size-8);
        align-items: center;
        justify-content: space-between;


        nav {
            flex: 1;
            display: flex;
            justify-content: space-between;
            align-items: center;

            [data-icon] {
                font-size: var(--size-96);
                color: CanvasText;
            }

            ul {
                list-style: none;
                display: flex;
                gap: var(--size-8)
            }
        }
    }
</style>